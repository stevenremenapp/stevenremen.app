  }
  main {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    flex: 1 1 auto;
  }
  .emoji {
    font-size: 10em;
    user-select: none;
    transform-origin: bottom;
    filter: drop-shadow(0 0 42px #e40ab1);
    animation: 2s rotateTheHorns infinite;
  }

  @keyframes rotateTheHorns {
    0% {
      transform: translateY(0) rotateY(0deg);
    }
    50% {
      transform: translateY(10px) rotateY(360deg);
    }
    100% {
      transform: translateY(0) rotateY(0deg);
    }
  }
</style>
